<div class="relations">
  {{#relations}}
    <h3 id="{{name}}">{{name}}</h3>
    {{#if comment}}
    <p>{{comment}}</p>
    {{/if}}
    <div class="responsive-table">
      <table>
        <tbody>
          {{#if label}}
          <tr>
            <th>label:</th>
            <td>{{label}}</td>
          </tr>
          {{/if}}
          <tr>
            <th>identifier:</th>
            <td><a href="{{uri}}">{{uri}}</a></td>
          </tr>
          {{#if domain.name}}
          <tr>
            <th>domain:</th>
            <td>
              <a href="#{{domain.name}}">{{domain.prefixName}}</a>
            </td>
          </tr>
          {{/if}}
          {{#if range.name}}
          <tr>
            <th>range:</th>
            <td>
              <a href="#{{range.name}}">{{range.prefixName}}</a>
            </td>
          </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
  {{/relations}}
</div>